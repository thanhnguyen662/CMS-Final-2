@model IEnumerable<PostSys.Models.Deadline>
@{
	ViewBag.Title = "ListDeadline";
}

<h2>ListDeadline</h2>

@using (Html.BeginForm("ListDeadline", "Deadlines", FormMethod.Get))
{
	<table class="table table-hover">
		<tr>
			<th>Deadline Name</th>
			<th>StartDate</th>
			<th>EndDate</th>
			<th>Delete</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.StartDate</td>
				<td>@item.EndDate</td>
				<td>@Html.ActionLink("Delete", "DeleteDeadline", new { id = item.Id })</td>
			</tr>
		}
	</table>
}