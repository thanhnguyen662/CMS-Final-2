@model PostSys.ViewModels.GuestFacultyViewModel

@{
	ViewBag.Title = "CreateGuest";
}

<h2>CreateGuest</h2>

@using (Html.BeginForm("CreateGuest", "GuestZones", FormMethod.Post))
{
	<div class="form-group">
		@Html.LabelFor(m => m.GuestZone.GuestId)
		@Html.DropDownListFor(m => m.GuestZone.GuestId,
			new SelectList(Model.Guests, "Id", "UserName"), "Select Guest",
			new { @class = "form-control" }
		)
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.GuestZone.FacultyId)
		@Html.DropDownListFor(m => m.GuestZone.FacultyId,
			new SelectList(Model.Faculties, "Id", "Name"), "Select Faculty",
			new { @class = "form-control" }
		)
	</div>

	<button type="submit" class="btn btn-primary">Assign more</button>

}
