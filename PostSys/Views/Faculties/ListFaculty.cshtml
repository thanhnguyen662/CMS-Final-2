@model IEnumerable<PostSys.Models.Faculty>
@{
	ViewBag.Title = "ListFaculty";
}

<h2>ListFaculty</h2>

@using (Html.BeginForm("ListFaculty", "Faculties", FormMethod.Get))
{
	<table class="table table-hover">
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Delete</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@Html.ActionLink("Delete", "DeleteFaculty", new { id = item.Id })</td>
			</tr>
		}
	</table>
}