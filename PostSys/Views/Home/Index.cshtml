				<li>@Html.ActionLink("List Assignment", "ListAssignment", "Assignments")</li>
				<li>@Html.ActionLink("List Posts", "ListPost", "Posts")</li>
				<li>@Html.ActionLink("List Comment", "ListComment", "Posts")</li>
				<li>@Html.ActionLink("List Publication", "ListPublication", "Posts")</li>
